<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.paragonfervour.charactersheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        tools:replace="android:icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".application.PaperlessApplication">

        <!-- Sugar ORM metadata -->
        <meta-data android:name="DATABASE" android:value="character.db" />
        <meta-data android:name="VERSION" android:value="2" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.paragonfervour.charactersheet.character.model" />

        <activity
            android:name=".activity.CharacterActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".features.activity.EditCharacterFeaturesActivity"
            android:label="@string/edit_activity_label"/>

        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/nav_settings"/>

        <activity
            android:name=".offense.activity.AddWeaponActivity"
            android:label="@string/nav_add_weapon_title"/>

        <activity
            android:name=".spells.activity.AddSpellActivity"
            android:label="@string/nav_add_weapon_title"/>
    </application>

</manifest>
