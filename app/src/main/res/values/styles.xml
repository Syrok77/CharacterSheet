<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Base theme (overridden for following reasons -->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowBackground">@color/brand_primary</item>
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/secondary_500</item>

        <item name="android:textColorPrimary">@color/primary_text_default_light</item>
        <item name="android:textColor">@color/primary_text_default_light</item>
        <item name="colorControlHighlight">@color/default_background_gray</item>
        <!-- Highlight color for pressed states -->
    </style>

    <!--Toolbar override of theme, which has dark theme instead of light.-->
    <style name="ToolbarAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/default_white</item>
        <item name="android:textColor">@color/default_white</item>

        <item name="android:windowBackground">@color/default_background_gray</item>
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryDark">@color/brand_secondary</item>
        <item name="colorAccent">@color/secondary_500</item>

        <item name="colorControlHighlight">@color/default_background_gray</item>
        <!-- Highlight color for pressed states -->
    </style>

    <!-- Navigation Drawer override of theme, which basically is AppTheme with a different control selected color-->
    <style name="DrawerAppTheme" parent="AppTheme">
        <!-- Primary color determines the highlight color of a control -->
        <item name="colorPrimary">@color/primary_text_default_light</item>
    </style>

    <style name="SectionTitle" >
        <item name="android:textColor">@color/tertiary_500</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

</resources>
