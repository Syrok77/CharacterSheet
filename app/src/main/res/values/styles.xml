<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryDark">@color/brand_secondary</item>
        <item name="colorAccent">@color/secondary_500</item>
        <item name="android:windowBackground">@color/default_white</item>

        <item name="android:textColorPrimary">@color/primary_text_default_material_light</item>
        <item name="colorControlHighlight">@color/default_background_gray</item> <!-- Highlight color for pressed states -->
    </style>

    <style name="ToolbarAppTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/default_white</item>
    </style>

</resources>
