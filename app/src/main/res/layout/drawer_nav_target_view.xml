<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:paddingLeft="4dp"
              android:paddingStart="4dp"
              android:paddingRight="0dp"
              android:paddingEnd="0dp"
              android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/drawer_nav_target_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/cd_weapon_icon"
        tools:src="@drawable/ic_drawer"/>

    <TextView
        android:id="@+id/drawer_nav_target_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/abc_text_size_small_material"
        tools:textColor="@color/primary_text_default_material_light"
        tools:text="@string/nav_offense_activity"/>

</LinearLayout>