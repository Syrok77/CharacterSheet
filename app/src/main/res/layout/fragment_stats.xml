<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/default_white"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.paragonfervour.charactersheet.view.StatValueComponent
            android:id="@+id/stats_health_stat_component"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            app:statBackground="@color/secondary_500"
            app:hapticInterval="10"
            app:statTitle="@string/stat_name_hp"/>


        <LinearLayout
            android:id="@+id/stats_ability_score_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:paddingBottom="11dp"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp">

            <com.paragonfervour.charactersheet.view.StatValueComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:hapticInterval="2"
                app:statTitle="@string/stat_name_str"/>

            <com.paragonfervour.charactersheet.view.StatValueComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:hapticInterval="2"
                app:statTitle="@string/stat_name_con"/>

            <com.paragonfervour.charactersheet.view.StatValueComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:hapticInterval="2"
                app:statTitle="@string/stat_name_dex"/>


            <com.paragonfervour.charactersheet.view.StatValueComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:hapticInterval="2"
                app:statTitle="@string/stat_name_int"/>

            <com.paragonfervour.charactersheet.view.StatValueComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:hapticInterval="2"
                app:statTitle="@string/stat_name_wis"/>

            <com.paragonfervour.charactersheet.view.StatValueComponent
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:hapticInterval="2"
                app:statTitle="@string/stat_name_cha"/>

        </LinearLayout>

        <com.paragonfervour.charactersheet.view.SkillValueComponent
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stats_ability_score_section"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:skillBackground="@color/tertiary_200"
            app:skillName="Stealth"/>

    </RelativeLayout>

</ScrollView>