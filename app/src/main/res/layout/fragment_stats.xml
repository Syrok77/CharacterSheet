<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/page_color"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/stats_health_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_toRightOf="@+id/stats_ability_score_section"
            android:layout_toEndOf="@+id/stats_ability_score_section"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:elevation="4dp"
            android:background="@drawable/section_bg"
            android:orientation="vertical">


            <com.paragonfervour.charactersheet.view.StatValueComponent
                android:id="@+id/stats_health_stat_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:hapticInterval="10"
                app:statBackground="@color/secondary_500"
                app:statTitle="@string/stat_name_hp"/>

            <com.paragonfervour.charactersheet.view.StatValueComponent
                android:id="@+id/stats_max_health_stat_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                app:hapticInterval="10"
                app:statBackground="@color/secondary_700"
                app:statTitle="@string/stat_name_max_hp"/>

            <com.paragonfervour.charactersheet.view.StatValueComponent
                android:id="@+id/stats_temp_health_stat_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                app:hapticInterval="10"
                app:statBackground="@color/secondary_200"
                app:statTitle="@string/stat_name_tmp_hp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/stat_health_summary_title"/>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/default_background_gray"/>
            
            <TextView
                android:id="@+id/stats_health_summary_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                tools:text="12 / 10"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/stats_ability_score_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:paddingBottom="11dp"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:elevation="4dp"
            android:background="@drawable/section_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.paragonfervour.charactersheet.view.StatValueComponent
                    android:id="@+id/stats_score_str_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:hapticInterval="2"
                    app:statTitle="@string/stat_name_str"/>

                <TextView
                    android:id="@+id/stats_score_str_mod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    tools:text="+3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.paragonfervour.charactersheet.view.StatValueComponent
                    android:id="@+id/stats_score_con_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:hapticInterval="2"
                    app:statTitle="@string/stat_name_con"/>

                <TextView
                    android:id="@+id/stats_score_con_mod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    tools:text="+2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.paragonfervour.charactersheet.view.StatValueComponent
                    android:id="@+id/stats_score_dex_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:hapticInterval="2"
                    app:statTitle="@string/stat_name_dex"/>

                <TextView
                    android:id="@+id/stats_score_dex_mod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    tools:text="0"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.paragonfervour.charactersheet.view.StatValueComponent
                    android:id="@+id/stats_score_int_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    app:hapticInterval="2"
                    app:statTitle="@string/stat_name_int"/>

                <TextView
                    android:id="@+id/stats_score_int_mod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    tools:text="-1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.paragonfervour.charactersheet.view.StatValueComponent
                    android:id="@+id/stats_score_wis_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    app:hapticInterval="2"
                    app:statTitle="@string/stat_name_wis"/>

                <TextView
                    android:id="@+id/stats_score_wis_mod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    tools:text="0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.paragonfervour.charactersheet.view.StatValueComponent
                    android:id="@+id/stats_score_cha_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    app:hapticInterval="2"
                    app:statTitle="@string/stat_name_cha"/>

                <TextView
                    android:id="@+id/stats_score_cha_mod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    tools:text="+1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/stats_skill_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/stats_health_section"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

        </LinearLayout>

    </RelativeLayout>

</ScrollView>