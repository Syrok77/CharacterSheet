<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@color/default_white"
            tools:context=".OffenseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/offense_weapon_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/offense_main_title"
                style="@style/SectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/offense_main_hand"/>

            <com.paragonfervour.charactersheet.offense.component.WeaponListViewComponent
                android:id="@+id/offense_main_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/offense_main_title"
                android:layout_marginBottom="12dp"
                android:paddingEnd="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingStart="4dp"/>

            <TextView
                android:id="@+id/offense_offhand_title"
                style="@style/SectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/offense_main_weapon"
                android:layout_marginBottom="8dp"
                android:text="@string/offense_off_hand"/>

            <com.paragonfervour.charactersheet.offense.component.WeaponListViewComponent
                android:id="@+id/offense_offhand_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/offense_offhand_title"
                android:paddingEnd="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingStart="4dp"/>

            <Button
                android:id="@+id/offense_add_weapon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/offense_offhand_weapon"
                android:background="?attr/selectableItemBackground"
                android:text="Add"
                android:textColor="@color/brand_secondary"
                />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
